<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".QuestionPost">

    <!-- 질문 작성 text -->
    <TextView
        android:id="@+id/writeQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/writeQuestionText"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        />

    <!-- 제목 editText -->
    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:hint="@string/titleText"
        android:singleLine="true"

        android:background="@drawable/rounded_edittext"

        app:layout_constraintTop_toBottomOf="@id/writeQuestionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"

        android:layout_marginTop="50dp"
        android:paddingStart="15sp"
        android:paddingEnd="15sp"
        />

    <!-- 내용 editText -->
    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="0dp"
        android:layout_height="350dp"
        app:layout_constraintWidth_percent="0.9"

        android:background="@drawable/rounded_edittext"
        android:hint="@string/contentText"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleEditText"
        android:layout_marginTop="30dp"
        android:paddingStart="15sp"
        android:paddingEnd="15sp"
        />

    <!-- 등록하기 button -->
    <android.widget.Button
        android:id="@+id/submitButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintWidth_percent="0.4"
        android:background="@drawable/rounded_edittext_background"

        android:text="@string/submitButtonText"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentEditText"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>