<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- back ImageView -->
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/group_255"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        />

    <!-- text -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 설정"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="68dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:src="@drawable/group_282"
        android:elevation="7dp"
        android:background="@drawable/img_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/rel_nickname"/>


    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/group_167"
        android:elevation="7dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="-50dp"
        />

    <TextView
        android:id="@+id/tv_nickname"
        android:text="닉네임"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/rel_nickname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:id="@+id/rel_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        android:layout_marginTop="68dp"
        >

        <!-- Nickname EditText -->
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:maxLines="1"
            android:inputType="text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:paddingBottom="12dp"
            android:paddingStart="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rectangle_201__1_"
            android:hint="닉네임을 입력하세요"
            android:textColor="#000000"
            android:textSize="13sp"
            />

        <Button
            android:id="@+id/btn_check_double"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:text="중복확인"
            android:elevation="10dp"
            android:layout_alignTop="@id/et_nickname"
            android:layout_alignEnd="@+id/et_nickname"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:textSize="10sp"
            android:background="@drawable/rectangle_273__1_" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_check_double"
        android:text="닉네임 중복을 확인해주세요."
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rel_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="-15dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="147dp"
        android:layout_height="34dp"
        android:text="확인"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:paddingTop="7dp"
        android:background="@drawable/round_rectangle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>