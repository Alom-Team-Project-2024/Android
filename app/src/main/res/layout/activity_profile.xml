<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- back ImageView -->
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/group_217"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12px"
        android:layout_marginTop="22px"
        />

    <!-- text -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 설정"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/group_150"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_bottom"
        android:layout_marginTop="110px"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@id/rel_nickname"
        android:layout_marginBottom="68px"
        />

    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/group_167"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        android:layout_marginTop="-50px"
        android:layout_marginStart="-50px"
        />
    <TextView
        android:id="@+id/tv_nickname"
        android:text="닉네임"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/rel_nickname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="39px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2px"
        />

    <RelativeLayout
        android:id="@+id/rel_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <!-- Nickname EditText -->
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="닉네임을 입력하세요"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rectangle_201"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_check_double"
            android:layout_width="51dp"
            android:layout_height="21dp"
            android:text="중복확인"
            android:layout_alignTop="@id/et_nickname"
            android:layout_alignEnd="@+id/et_nickname"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:textSize="8sp"
            android:background="@drawable/rectangle_273" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_check_double"
        android:text="사용 가능한 닉네임입니다."
        android:textSize="8sp"
        android:textColor="#006917"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rel_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="38px"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="13sp"
        android:textColor="#000000"
        android:paddingBottom="5px"
        android:background="@drawable/rectangle_264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48px"
        />

</androidx.constraintlayout.widget.ConstraintLayout>