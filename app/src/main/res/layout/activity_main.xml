<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    >
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="64px"
        android:layout_height="60px"
        android:background="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20px"
        android:layout_marginTop="20px"
        />

    <ImageView
        android:id="@+id/img_backlogo"
        android:layout_width="308.27px"
        android:layout_height="287.32px"
        android:background="@drawable/group_124__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="343.61"
        android:layout_marginEnd="-83px"
        android:layout_marginTop="-26px"
        />

    <TextView
        android:id="@+id/tv_encourage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이수민님,\n오늘도 화이팅하세요!"
        android:textSize="27sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20px"
        android:layout_marginTop="10px"
        />

    <Button
        android:layout_width="14.25px"
        android:layout_height="16.63px"
        android:background="@drawable/group_11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="14.75px"
        android:layout_marginTop="33px"
        />

    <TextView
        android:id="@+id/tv_home_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="MY 멘토멘티 기록"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_encourage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20px"
        android:layout_marginTop="30px"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_record"
        android:layout_width="match_parent"
        android:layout_height="240px"
        app:layout_constraintTop_toBottomOf="@id/tv_home_record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:layout_marginTop="13px"
        />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="전체 게시판"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20px"
        android:layout_marginBottom="175.6px"
        />

    <RelativeLayout
        android:id="@+id/btn_container1"
        android:layout_width="330px"
        android:layout_height="55px"
        android:background="@drawable/rectangle_221"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15px"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        android:layout_marginTop="6px"
        android:focusable="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            >

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="41dp"
                android:textColor="#000000"
                android:text="종이님"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인공지능과 빅데이터 3주차 과제 질문있습니..."
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_container2"
        android:layout_width="330px"
        android:layout_height="55px"
        android:background="@drawable/rectangle_221"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15px"
        app:layout_constraintTop_toBottomOf="@id/btn_container1"
        android:layout_marginTop="10px"
        android:focusable="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="41dp"
                android:textColor="#000000"
                android:text="종이님"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인공지능과 빅데이터 3주차 과제 질문있습니..."
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>