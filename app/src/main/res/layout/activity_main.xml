<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    >

    <FrameLayout
        android:id="@+id/navfragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:background="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/img_backlogo"
        android:layout_width="308.27dp"
        android:layout_height="287.32dp"
        android:background="@drawable/group_124__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="343.61"
        android:layout_marginEnd="-83px"
        android:layout_marginTop="-26px"
        />

    <TextView
        android:id="@+id/tv_encourage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이수민님,\n오늘도 화이팅하세요!"
        android:textSize="27sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20px"
        android:layout_marginTop="10px"
        />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/group_11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="14.75dp"
        android:layout_marginTop="33dp"
        />

    <TextView
        android:id="@+id/tv_home_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="질문 게시판"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_encourage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tv_home_record_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="1/10"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_encourage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_home_record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:layout_marginTop="13dp"
        app:layout_constraintBottom_toTopOf="@id/tv_home_question"
        />

    <TextView
        android:id="@+id/tv_home_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="구인 게시판"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/rv_record"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"

        />

    <TextView
        android:id="@+id/tv_home_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="더보기"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/rv_record"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"

        />


    <RelativeLayout
        android:id="@+id/btn_container1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/rectangle_221__2_"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_question"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:focusable="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            >

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="20dp"
                android:textColor="#000000"
                android:text="종이님"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인공지능과 빅데이터 과외해 주실 분 구합니다."
                android:textColor="#000000"
                android:paddingEnd="10dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1분전"
                android:textColor="#9D9D9D"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_container2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/rectangle_221__2_"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_container1"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:focusable="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="20dp"
                android:textColor="#000000"
                android:text="종이님"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인공지능과 빅데이터 과외해 주실 분 구합니다."
                android:textColor="#000000"
                android:paddingEnd="10dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1분전"
                android:textColor="#9D9D9D"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>