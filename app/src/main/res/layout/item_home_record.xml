<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_list"
    android:layout_width="wrap_content"
    android:layout_height="249.5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 배경 이미지 설정 -->
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:background="@drawable/rectangle_213__1_"
            android:layout_marginTop="1dp"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="인공지능과 빅데이터"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 나머지 동일한 코드 유지 -->

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="1"
                android:textColor="#000000"
                android:padding="1dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toEndOf="@id/comment"
                android:layout_marginStart="1dp" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:textColor="#000000"
                android:padding="1dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/comment_button"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toTopOf="@id/imageUrl"
                android:layout_marginBottom="13dp" />

            <ImageView
                android:id="@+id/imageUrl"
                android:layout_width="158dp"
                android:layout_height="110dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_216"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <!-- 나머지 동일한 코드 유지 -->

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="none"
                android:singleLine="false"
                android:maxLines="10"
                android:text="안녕하세요안녕하세요안녕하세요안녕하세요"
                android:textColor="#000000"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="@id/imageUrl"
                app:layout_constraintEnd_toEndOf="@id/imageUrl"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/imageUrl"
                app:layout_constraintTop_toTopOf="@id/imageUrl"
                app:layout_constraintVertical_bias="0.023" />

            <TextView
                android:id="@+id/mentorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="세종이멘토"
                android:textColor="#000000"
                android:textSize="8sp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintBottom_toTopOf="@id/img_answer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageUrl" />


            <ImageView
                android:id="@+id/img_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_318"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/back"
                android:paddingBottom="55dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="2dp"
                android:breakStrategy="balanced"
                android:ellipsize="end"
                android:gravity="start|top"
                android:hyphenationFrequency="full"
                android:maxLines="3"
                android:text="sdfsdf"
                android:textColor="#000000"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="@id/img_answer"
                app:layout_constraintEnd_toEndOf="@+id/img_answer"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/img_answer"
                app:layout_constraintTop_toTopOf="@+id/img_answer"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
